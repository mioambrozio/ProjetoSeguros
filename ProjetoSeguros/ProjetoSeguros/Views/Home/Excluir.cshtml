@{
    ViewBag.Title = "Excluir Seguro";
}
<h2>@ViewBag.Title.</h2>
<form id="form-excluir">
    <div class="jumbotron">
        <fieldset style="padding: 15px;
    border: #d7d7d7;
    border-style: solid;
    margin-bottom: 5px;">
            <legend style="width:150px;">Buscar Seguro</legend>
            <div class="row">
                <div class="col-lg-12">
                    <label>Número do Seguro</label>
                    <input class="form-control" data-bind="value:numSeguro" type="text" placeholder="Número do Seguro">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-info" data-bind="click: buscar">Buscar</button>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Atenção!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-bind="click: dialogClose">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Deseja Realmente excluir o seguro?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bind="click: dialogConfirm">Excluir</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bind="click: dialogCancel">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts {
    @Scripts.Render("~/bundles/Excluir")
}