@model ProjetoSeguros.Models.EncontrarVeiculo
    @{
        ViewBag.Title = "Encontrar Veículo";
    }
    <h2>@ViewBag.Title</h2>
    <div id="model" data-model="@Helpers.JsonEncode(Model)"></div>
    <form id="form-encontrar">
        <div class="jumbotron">
            <fieldset style="padding: 15px;border: #d7d7d7;border-style: solid;margin-bottom: 5px;">
                <legend style="width:275px;">Encontrar Seguro do veículo</legend>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group col-lg-12">
                            <label>Número da placa</label>
                            <input class="form-control" type="text" placeholder="Número da placa do veículo" data-bind="value: numPlaca">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-info" data-bind="click: buscar">Buscar</button>
                    </div>
                </div>
            </fieldset>

            <div class="row">
                <div class="col-lg-12">
                    <label>Número do seguro: </label>
                    <label class="form-check-label" data-bind="text:id"></label>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <label>Cliente: </label>
                    <label class="form-check-label" data-bind="text:numCliente"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <label>Tipo do Seguro: </label>
                    <label class="form-check-label" data-bind="text:dscTipo"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group col-lg-12">
                        <label data-bind="text:dscObjetoSegurado"></label>
                        <label class="form-check-label" data-bind="text: objetoSegurado"></label>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @section scripts {
        @Scripts.Render("~/bundles/EncontrarVeiculo")
    }